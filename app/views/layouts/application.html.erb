<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Forceps Official</title>
    <!-- Favicon -->
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'style', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Preloader -->
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="lds-ellipsis">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">
        <!-- Navbar Area -->
        <div class="oneMusic-main-menu">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="oneMusicNav">

                        <!-- Nav brand -->
                        <a href="index.html" class="nav-brand">
                            <%= image_tag "logo.png" %>
                        </a>

                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <!-- Menu -->
                        <div class="classy-menu">

                            <!-- Close Button -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                    <li><a href="index.html">Home</a></li>
                                    <li><a href="index.html">Biografia</a></li>
                                    <li><a href="event.html">Eventos</a></li>
                                    <li><a href="blog.html">Blog</a></li>
                                    <li><a href="index.html">Loja</a></li>
                                    <li><a href="contact.html">Contato</a></li>
                                </ul>
                            </div>
                            <!-- Nav End -->
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->

    <%= yield %>

    <!-- ##### Footer Area Start ##### -->
    <footer class="footer-area">
        <div class="container">
            <div class="row d-flex flex-wrap align-items-center">
                <div class="col-12 col-md-6">
                    <p class="copywrite-text">
                        Copyright &copy; 2020 All rights reserved | 
                        Template by <a href="https://colorlib.com" target="_blank">Colorlib</a> |
                        Programing by <a href="https://github.com/tavaresaraujo" target="_blank">Bruno Tavares</a>
                    </p>
                </div>

                <div class="col-12 col-md-6">
                    <div class="footer-nav">
                        <ul>
                            <li><a href="https://www.facebook.com/Forceps/" target="_blank"><%= image_tag "facebook.png" %></a></li>
                            <li><a href="https://www.instagram.com/forcepsofficial/" target="_blank"><%= image_tag "instagram.png" %></a></li>
                            <li><a href="https://www.youtube.com/user/forcepsdeath" target="_blank"><%= image_tag "youtube.png" %></a></li>
                            <li><a href="https://twitter.com/forcepsband" target="_blank"><%= image_tag "twitter.png" %></a></li>
                            <li><a href="https://open.spotify.com/artist/7bKHwk9FKCTIcLD7G4qAnC" target="_blank"><%= image_tag "spotify.png" %></a></li>
                            <li><a href="https://forceps.bandcamp.com/" target="_blank"><%= image_tag "bandcamp.png" %></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area Start ##### -->

    <%= javascript_include_tag 'jquery-2.2.4.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'popper.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'bootstrap.min', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'plugins', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'active', media: 'all', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
